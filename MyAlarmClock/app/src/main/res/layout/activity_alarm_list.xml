<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ListView
		android:id="@+id/alarm_list_items"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="#ccc"
		android:dividerHeight="1dp"/>

	<com.example.kwamecorp.myalarmclock.components.AddFloatingActionButton
		android:id="@+id/addAlarmFAB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_gravity="right|bottom"
		android:layout_marginBottom="16dp"
		android:layout_marginRight="16dp"
		app:fab_colorNormal="@color/blue_semi_transparent"
		app:fab_colorPressed="@color/blue_semi_transparent_pressed"
		app:fab_plusIconColor="@color/white"/>

</FrameLayout>
